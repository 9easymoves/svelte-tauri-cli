		"test": "pnpm -r test"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.6",
		"@sveltejs/eslint-config": "^8.0.1",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"eslint": "^9.6.0",
		"typescript-eslint": "^8.0.0"
	},
	"packageManager": "pnpm@9.7.0",
	"engines": {
		"pnpm": "^9.0.0"
	}
}
